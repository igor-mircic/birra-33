<img class="item__image" src="{{ this.image_url }}" alt="" />
<div class="item__content">
  <h3 class="item__name">{{ this.name }}</h3>
  <div>
    <span class="item__price">{{ this.price }} x </span>
    <input
      class="item__quantity"
      type="number"
      name="quantity"
      value="{{ this.quantity }}"
      min="1"
      max="99"
    />
  </div>
</div>
<button class="item__remove"></button>
